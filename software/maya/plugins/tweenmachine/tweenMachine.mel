global proc tmButtonStart (float $poseBias, string $name) {

	string $nodes[];

	$biasCtl = $name + "Bias";
	floatSliderGrp -e -v $poseBias $biasCtl;
	$poseBias = ($poseBias + 100) / 200;

	if (startsWith ($name, "tmCharacterSet")) 
